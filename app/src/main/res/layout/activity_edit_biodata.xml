<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Biodata DIri"
        android:textColor="@color/blue_700"
        android:textSize="23dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="370dp"
        android:layout_height="1dp"
        android:background="@color/blue_700"
        android:layout_gravity="center"
        android:layout_marginTop="3dp"/>

    <ImageView
        android:id="@+id/profile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/profile" />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Lengkap:"
            android:textSize="19dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/blue_700"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/namalengkap"
            android:hint="isi nama lengkap"
            android:textSize="15dp"
            android:layout_marginLeft="6dp"
            android:paddingLeft="7dp"
            android:background="#5676"
            android:layout_width="225dp"
            android:text="Vellyn Natalie"
            android:layout_height="35dp"/>
    </LinearLayout>

    <!--   <TextView-->
    <!--       android:id="@+id/userAlert"-->
    <!--       android:layout_width="match_parent"-->
    <!--       android:layout_height="wrap_content"-->
    <!--       android:gravity="center"-->
    <!--       android:textColor="@color/blue_700"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal Lahir  :"
            android:textSize="19dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/blue_700"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/date"
            android:inputType="date"
            android:hint="isi tanggal lahir (dd/mm/yyyy)"
            android:text="13/03/2003"
            android:textSize="15dp"
            android:layout_marginLeft="8dp"
            android:paddingLeft="7dp"
            android:background="#5676"
            android:layout_width="225dp"
            android:layout_height="35dp"/>
    </LinearLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jenis Kelamin :"
            android:textSize="19dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="3dp"
            android:textColor="@color/blue_700"
            android:textStyle="bold"/>
        <RadioButton
            android:id="@+id/Pria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pria"
            android:gravity="center"
            android:layout_marginRight="7dp"
            android:textSize="18dp"/>
        <RadioButton
            android:id="@+id/Wanita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Wanita"
            android:gravity="center"
            android:textSize="18dp"/>
    </RadioGroup>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jurusan            :"
            android:textSize="19dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/blue_700"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/Jurusan"
            android:hint="isi jurusan"
            android:text="Sistem Informasi"
            android:textSize="15dp"
            android:layout_marginLeft="8dp"
            android:paddingLeft="7dp"
            android:background="#5676"
            android:layout_width="225dp"
            android:layout_height="35dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kelas                 :"
            android:textSize="19dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/blue_700"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/Kelas"
            android:hint="isi kelas"
            android:text="21SI2"
            android:textSize="15dp"
            android:layout_marginLeft="8dp"
            android:paddingLeft="7dp"
            android:background="#5676"
            android:layout_width="225dp"
            android:layout_height="35dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NIM                   :"
            android:textSize="19dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/blue_700"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/nim"
            android:hint="isi NIM"
            android:text="03081210008"
            android:textSize="15dp"
            android:layout_marginLeft="8dp"
            android:paddingLeft="7dp"
            android:background="#5676"
            android:layout_width="225dp"
            android:layout_height="35dp"/>
    </LinearLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skills Bahasa  :"
            android:textSize="19dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="3dp"
            android:textColor="@color/blue_700"
            android:textStyle="bold"/>
        <CheckBox
            android:id="@+id/English"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="English"
            android:checked="true"
            android:gravity="center"
            android:layout_marginRight="7dp"
            android:textSize="18dp"/>
        <CheckBox
            android:id="@+id/Mandarin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mandarin"
            android:gravity="center"
            android:textSize="18dp"/>
    </RadioGroup>

    <Button
        android:id="@+id/buttondone"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Done"
        android:background="@color/blue_700"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>



</LinearLayout>